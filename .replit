modules = ["web", "nodejs-20", "python-3.11", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["openssl", "postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python server.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 45335
externalPort = 3000

[[ports]]
localPort = 45409
externalPort = 3001

[[ports]]
localPort = 45731
externalPort = 3002

[deployment]
deploymentTarget = "autoscale"
publicDir = "."
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]
